#include<stdio.h>

int search(int arr[], int n, int k) {
	    // code here
	    int i;
    for (i=0; i<n ;i++)
    {
        if ( arr[i] == k)
        {
            return (++i);
          break;
          }
    }
                                                  
    if( i==n & arr[i]!=k)            /*Here if is for the worst case, i.e. if "for loop" is                                                      at last index position and the value is not                                                            equals to k, then we return -1.*/
    {
        return(-1);
        
    }
}

	    
	    
        
